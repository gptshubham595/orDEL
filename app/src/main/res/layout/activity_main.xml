<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.asksira.loopingviewpager.LoopingViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isInfinite="true"
        app:autoScroll="true"
        app:scrollInterval="3000"
        app:wrap_content="true"/>

    <com.rd.PageIndicatorView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewpager"
        android:layout_marginBottom="8dp"
        app:piv_animationType="slide"
        app:piv_animationDuration="200"
        app:piv_interactiveAnimation="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/indicator"
        android:layout_marginBottom="65dp"
        android:layout_marginTop="-5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/samosa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Samosa"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:typeface="serif" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Rs 10/p"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/samosaminus"
                                android:background="@drawable/minus" />

                            <EditText
                                android:inputType="number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:maxEms="10"
                                android:minEms="0"
                                android:id="@+id/samosatotal"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/samosaadd"
                                android:background="@drawable/add" />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dabeli" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="100dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Dabeli"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:typeface="serif" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Rs 45/p"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/dabeliminus"
                                android:background="@drawable/minus" />

                            <EditText
                                android:inputType="number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:maxEms="10"
                                android:minEms="0"
                                android:id="@+id/dabelitotal"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/dabeliadd"
                                android:background="@drawable/add" />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cake" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="cake"
                            android:textSize="18sp"
                            android:textStyle="italic"
                            android:typeface="serif" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Rs 440/p"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/cakeminus"
                                android:background="@drawable/minus" />

                            <EditText
                                android:inputType="number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:maxEms="10"
                                android:id="@+id/caketotal"
                                android:minEms="0"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/cakeadd"
                                android:background="@drawable/add" />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/chicken" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Chicken L"
                            android:textSize="18sp"
                            android:textStyle="italic"
                            android:typeface="serif" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Rs 165/p"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/chickenminus"
                                android:background="@drawable/minus" />

                            <EditText
                                android:inputType="number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:maxEms="10"
                                android:id="@+id/chickentotal"
                                android:minEms="0"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/chickenadd"
                                android:background="@drawable/add" />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/babycorn" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="BabyCorn"
                            android:textSize="18sp"
                            android:textStyle="italic"
                            android:typeface="serif" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Rs 135/p"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/babyminus"
                                android:background="@drawable/minus" />

                            <EditText
                                android:inputType="number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:maxEms="10"
                                android:id="@+id/babytotal"
                                android:minEms="0"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/babyadd"
                                android:background="@drawable/add" />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/fried" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Fri.Maggi"
                            android:textSize="18sp"
                            android:textStyle="italic"
                            android:typeface="serif" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Rs 28/p"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/friminus"
                                android:background="@drawable/minus" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:maxEms="10"
                                android:id="@+id/frimaggitotal"
                                android:inputType="number"
                                android:minEms="0"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/friadd"
                                android:background="@drawable/add" />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/maggi" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Maggi"
                            android:textSize="18sp"
                            android:textStyle="italic"
                            android:typeface="serif" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Rs 25/p"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/maggiminus"
                                android:background="@drawable/minus" />

                            <EditText
                                android:inputType="number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:maxEms="10"
                                android:minEms="0"
                                android:id="@+id/maggitotal"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/maggiadd"
                                android:background="@drawable/add" />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/vada" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Vada Pav"
                            android:textSize="18sp"
                            android:textStyle="italic"
                            android:typeface="serif" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Rs 35/p"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="18dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/vadaminus"
                                android:background="@drawable/minus" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:maxEms="10"
                                android:id="@+id/vadatotal"
                                android:inputType="number"
                                android:minEms="0"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/vadaadd"
                                android:background="@drawable/add" />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="EMERGENCY/PAID?"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="8dp"
        android:text="9669615449/8876048544"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/cir"
        android:layout_marginRight="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp"
        android:layout_height="90dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_shopping_cart_black_24dp"
        android:scaleType="fitXY"
        android:id="@+id/cart"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="22dp"
        android:layout_height="50dp"/>

</RelativeLayout>